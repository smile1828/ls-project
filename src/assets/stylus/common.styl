@import "variable.styl"

/********** 屏幕宽度在340px至410px时，基准尺寸使用20px **********************************************************/
html{
  width 100%
  height 100%
}

body{
  width: 100%;
  height: 100%;
  background: $ls-bg-color;
  line-height: 1;
  overflow-x: hidden;
  position: relative;
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light',"Microsoft YaHei UI","Microsoft YaHei", arial, sans-serif, 'Droid Sans Fallback';
  user-select: none;
  -webkit-overflow-scrolling: touch;
  -webkit-tap-highlight-color: transparent;
}
